<div class="row-auto justify-content-center contact-row">
    <p class="form-info mt-4">{{introRegister}}</p>
    {{#if message}}
    <p>{{message}}</p>
    {{/if}}
    <form action="/register" method="post">
        <div class="form-row mt-4">
            <div class="form-group col-12 col-md-12 d-flex align-items-center">
                <label for="name">{{name}}:</label>
                <input class="form-control" type="username" id="name" name="name" required />
            </div>
            <div class="form-group col-12 col-md-12 d-flex align-items-center">
                <label for="password">{{password}}:</label>
                <input class="form-control" type="password" id="password" name="password" required />
            </div>
            <div class="form-group col-12 col-md-12 d-flex">
                <label for="email">{{email}}:</label>
                <input type="email" class="form-control" id="email" name="email" required />
            </div>
            <div class="form-group col-12 col-md-12 d-flex custom-control custom-checkbox">
                <label class="custom-control-label" for="isShopKeeper">{{isShopKeeper}}</label>
                <input type="checkbox" class="custom-control-input" id="isShopKeeper" name="isShopKeeper">
            </div>

            <div class="form-group col-12 col-md-12 d-flex align-items-center">
                <button type="submit" class="btn btn-primary">{{register}}</button>
                <label id="registerLabel">{{alreadyAccount}}
                    <a href="/login" id="toggleRegistration">{{login}}</a></label>
            </div>
        </div>

    </form>
</div>