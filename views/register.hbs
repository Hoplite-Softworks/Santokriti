<link rel="stylesheet" href="/css/register.css" />
<div class="row-auto d-flex justify-content-center">
    <p class="form-info mt-4">{{introRegister}}</p>
    {{#if message}}
        <p>{{message}}</p>
    {{/if}}
</div>
<div class="row-auto justify-content-center d-flex contact-row">
    <form action="/register" method="post">
        <div class="form-row mt-4">
            <div class="form-group col-12 col-md-12 d-flex align-items-center">
                <label for="firstName">{{firstName}}:</label>
                <input
                    class="form-control"
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                />
            </div>
            <div class="form-group col-12 col-md-12 d-flex align-items-center">
                <label for="lastName">{{lastName}}:</label>
                <input
                    class="form-control"
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-12 col-md-12 d-flex align-items-center">
                <label for="password">{{password}}:</label>
                <input
                    class="form-control"
                    type="password"
                    id="password"
                    name="password"
                    required
                />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-12 col-md-12 d-flex">
                <label for="email">{{email}}:</label>
                <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    required
                />
            </div>
        </div>
        <div class="form-row">
            <div
                class="form-group col-12 col-md-12 d-flex custom-control justify-content-start custom-checkbox"
            >
                <label
                    class="custom-control-label"
                    id="isOwnerLabel"
                    for="isOwner"
                >{{isOwner}}</label>
                <input
                    type="checkbox"
                    class="custom-control-input"
                    id="isOwner"
                    name="isOwner"
                />
            </div>
        </div>
        <div class="form-row">
            <div
                class="form-group col-12 col-md-12 d-none"
                id="telephoneContainer"
            >
                <label for="telephone">{{telephone}}:</label>
                <input
                    type="tel"
                    class="form-control"
                    id="telephone"
                    name="telephone"
                    required
                />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-12 col-md-12 d-flex align-items-center">
                <button
                    type="submit"
                    class="btn btn-primary"
                >{{register}}</button>
                <label id="registerLabel">{{alreadyAccount}}
                    <a
                        href="/login"
                        id="toggleRegistration"
                    >{{login}}</a></label>
            </div>
        </div>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
   $(document).ready(function() {
            $('#isOwner').change(function() {
                if ($(this).is(':checked')) {
                    $('#telephoneContainer').removeClass('d-none').addClass('d-flex');
                } else {
                    $('#telephoneContainer').removeClass('d-flex').addClass('d-none');
                }
            });
        });
</script>