<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<link href="/css/place.css" rel="stylesheet" />

{{#if message}}
    <p>{{message}}</p>
{{/if}}

<div class="row-auto d-flex justify-content-center">
    <div class="row mb-4 ms-1 me-1 info-core">
        <div class="row m-0 p-0">
            <div class="col p-2">
                <p
                    class="title fs-3 text-center m-0 mt-2"
                >{{place.place_name}}</p>
            </div>
        </div>
        <div class="row m-0 p-2 pt-3">
            <div class="col">
                <p class="info-text">{{place.description}}</p>
                <p class="keywords-text mt-3 mb-1">{{place.keywords}}</p>
            </div>
        </div>
        <div class="row-2 m-0 p-2 pt-0">
            <div
                class="col p-4 pb-1 d-flex justify-content-center align-items-center"
            >
                <div class="swiper" style="max-height: 100%;">
                    <div class="swiper-wrapper">
                        {{#unless place.photos}}
                            <div class="swiper-slide"><img
                                    src="/images/background-image-1.jpg"
                                    alt="{{place.name}}"
                                    class="float-center mb-3"
                                /></div>
                        {{else}}
                            {{#each place.photos}}
                                <div class="swiper-slide"><img
                                        src="{{this}}"
                                        alt="{{place.name}}"
                                    /></div>
                            {{/each}}
                        {{/unless}}
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>

        {{#unless place.isBookmarked}}
            <a href="/bookmarks/add/{{place.place_id}}">
                <div class="row m-0 p-2 pb-0">
                    <div class="col-auto p-0 ps-4 fs-3">
                        <i class="bi bi-bookmark"></i>
                    </div>
                    <div class="col p-0 ms-2 fs-6">
                        <p class="m-0">{{AddToBookmarks}}</p>
                    </div>
                </div>
            </a>
        {{else}}
            <a href="/bookmarks/remove/{{place.place_id}}">
                <div class="row m-0 p-2 pb-0">
                    <div class="col-auto p-0 ps-4 fs-3">
                        <i class="bi bi-bookmark-fill"></i>
                    </div>
                    <div class="col p-0 ms-2 fs-6">
                        <p class="m-0">{{RemoveFromBookmarks}}</p>
                    </div>
                </div>
            </a>
        {{/unless}}

        <a href="/map">
            <div class="row m-0 mb-3 mt-2 p-2 pt-0">
                <div class="col-auto p-0 ps-4 fs-3">
                    <i class="bi bi-arrow-left"></i>
                </div>
                <div class="col p-0 ms-2 fs-6">
                    <p class="m-0">{{backToMap}}</p>
                </div>
            </div>
        </a>
    </div>
</div>

<script
    src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
></script>
<script>
    const swiper = new Swiper(".swiper", { 
        direction: "horizontal",
        loop: true,
        autoplay: { delay: 10000, },
        pagination: { el: ".swiper-pagination", },
        allowTouchMove: true,
    });
</script>