<html lang={{locale}}>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="{{pageSpecificCSS}}" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <!-- Leaflet -->
    <link rel="stylesheet" href="/css/leaflet.css" />
    <!-- Leaflet.MarkerCluster -->
    <link href="/Leaflet.markercluster-1.4.1/dist/MarkerCluster.css" rel="stylesheet" />
    <link href="/Leaflet.markercluster-1.4.1/dist/MarkerCluster.Default.css" rel="stylesheet" />

    <title>{{title}}</title>
    <!--<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" href="/style.css">-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
</head>

<body style="background-image: url(/images/background-image-2.jpg);
    background-size: cover;
    background-position: center;
    background-repeat: repeat;">
    <div class="container background-container">
        <div class="row">
            <div class="col-auto">
                <div id="lang-menu" class="btn-group dropend">
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown"
                        data-bs-auto-close="outside" aria-expanded="false" id="lang-menu-button">
                        <p class="fs-6 d-none d-md-inline" style="margin: 0.2rem; margin-right: 0.5rem; display:inline">
                            <!--{{languages.locale.langName}}-->{{locale}}
                        </p>
                        <i class="bi bi-translate ms-2"></i>
                    </button>
                    <div class="dropdown-menu" id="menu-container">
                        <ul id="menu-list">
                            {{#each languagesList}}
                            <li class="navitem">
                                <a href="?lang={{this.langShort}}">{{this.langName}}</a>
                                <img src={{this.langIconSrc}}/>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col mt-2">
                <p class="text-center fs-2 mb-0" id="islandName">{{islandName}}</p>
            </div>
            <div class="col-auto">
                <div id="menu" class="btn-group dropstart">
                    <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown"
                        data-bs-auto-close="outside" aria-expanded="false" id="menu-button">
                        <p class="fs-6 d-none d-md-inline" style="margin: 0.2rem; margin-right: 0.5rem; display:inline">
                            {{menuText}}
                        </p>
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="dropdown-menu" id="menu-container">
                        <ul id="menu-list">
                            <li class="navitem"><a href="/map">{{menuOptionMap}}</a></li>
                            <li class="navitem"><a href="/info">{{menuOptionInfo}}</a></li>
                            <li class="navitem"><a href="/contact">{{menuOptionContact}}</a></li>
                            <li class="navitem" id="bookmarks"><a href="/bookmarks">{{menuOptionBookmarks}}</a></li>
                            {{#if locals.isOwner}}
                            <li><a href="/owned">{{menuOptionOwned}}</a></li>
                            {{/if}}
                            <li class="navitem" id="loginlogout">
                                {{#if userId}}
                                <a href="/logout">{{menuOptionLogout}}</a>
                                {{else}}
                                <a href="/login">{{menuOptionLogin}}</a>
                                {{/if}}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-auto">
            <div class="col mb-3">
                <p class="text-center fs-4 mb-0" id="islandSlogan">{{islandSlogan}}</p>
            </div>
        </div>
        {{{body}}}
        <div class="row-auto">
            <div class="col-auto">
                <p class="fs-5 mb-1" id="credits">Â© Lefteris Gkliatis, Panos
                    Lelakis, 2024</p>
            </div>
        </div>
    </div>
    <script src="/js/lang.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>

</html>