<div class="row-auto justify-content-center contact-row">
    <p class="form-info mt-4">{{introLogin}}</p>
    {{#if message}}
        <p>{{message}}</p>
    {{/if}}
    <form action="/login" method="post">
        <div class="form-row mt-4">
            <div class="form-group col-12 col-md-12 d-flex">
                <label for="email">{{email}}:</label>
                <input type="email" id="email" name="email" required />
            </div>
            <div class="form-group col-12 col-md-12 d-flex">
                <label for="password">{{password}}:</label>
                <input type="password" id="password" name="password" required />
            </div>
        </div>
        <div class="form-group col-12 col-md-12 d-flex align-items-center">
            <button type="submit" class="btn btn-primary">{{login}}</button>
            <label id="registerLabel">{{noAccountYet}}
                <a href="/register" id="toggleRegistration">{{register}}</a></label>
        </div>
    </form>
</div>

